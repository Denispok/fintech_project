<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:padding="12dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              style="@style/TextTitle"
              android:id="@+id/last_name_title"
              android:text="@string/last_name_title"
              app:layout_constraintTop_toTopOf="parent"
              android:paddingBottom="4dp"
              app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/last_name"
              android:inputType="textPersonName"
              android:minWidth="100dp"
              app:layout_constraintTop_toTopOf="@id/last_name_title"
              app:layout_constraintBaseline_toBaselineOf="@id/last_name_title"
              app:layout_constraintLeft_toRightOf="@id/last_name_title"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              style="@style/TextTitle"
              android:id="@+id/first_name_title"
              android:paddingBottom="4dp"
              android:text="@string/first_name_title"
              app:layout_constraintTop_toBottomOf="@id/last_name_title"
              app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/first_name"
              android:minWidth="100dp"
              android:inputType="textPersonName"
              app:layout_constraintTop_toTopOf="@id/first_name_title"
              app:layout_constraintBaseline_toBaselineOf="@id/first_name_title"
              app:layout_constraintLeft_toRightOf="@id/first_name_title"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              style="@style/TextTitle"
              android:id="@+id/middle_name_title"
              android:text="@string/middle_name_title"
              android:paddingBottom="4dp"
              app:layout_constraintTop_toBottomOf="@id/first_name_title"
              app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/middle_name"
              android:minWidth="100dp"
              android:inputType="textPersonName"
              app:layout_constraintTop_toTopOf="@id/middle_name_title"
              app:layout_constraintBaseline_toBaselineOf="@id/middle_name_title"
              app:layout_constraintLeft_toRightOf="@id/middle_name_title"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/button_save"
            app:layout_constraintTop_toBottomOf="@id/middle_name_title"
            android:text="@string/save"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/button_cancel"
            app:layout_constraintTop_toBottomOf="@id/middle_name_title"
            android:text="@string/cancel"
            app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>