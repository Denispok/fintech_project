<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment_progress"
            android:name="com.fintech.denispok.fintechproject.courses.ProgressFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/courses_fragment_margin"
            android:layout_marginTop="@dimen/courses_fragment_margin"
            android:layout_marginEnd="@dimen/courses_fragment_margin" />

        <fragment
            android:id="@+id/fragment_rating"
            android:name="com.fintech.denispok.fintechproject.courses.RatingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/courses_fragment_margin"
            android:layout_marginTop="@dimen/courses_fragment_margin"
            android:layout_marginEnd="@dimen/courses_fragment_margin" />

        <fragment
            android:id="@+id/fragment_completed_courses"
            android:name="com.fintech.denispok.fintechproject.courses.CompletedCoursesFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</ScrollView>